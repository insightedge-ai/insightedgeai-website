FROM node:22-alpine

# App directory inside container
WORKDIR /app

# Install dependencies first (cached layer)
COPY package.json package-lock.json ./
RUN npm ci

# Copy rest of the source (bind mount will override in dev)
COPY . .

# Next.js dev server
EXPOSE 3000

CMD ["npm", "run", "dev", "--", "-H", "0.0.0.0", "-p", "3000"]

